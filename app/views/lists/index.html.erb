<h1>All lists</h1>
<ul>
  <% @lists.each do |l| %>
    <li>
      <p>
        <%= l.title %>
      </p>
      <ul>
        <% l.list_items.each do |i| %>
          <li>
            <p>
              <%= i.content %>
            </p>
          </li>
          <% end %>
      </ul>
    </li>
  <% end %>
</ul>
